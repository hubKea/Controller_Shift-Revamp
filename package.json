{
  "scripts": {
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand tests/utils.test.cjs tests/pdf-service.test.mjs tests/messages-service.test.js",
    "test:unit": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand tests/utils.test.cjs tests/pdf-service.test.mjs tests/messages-service.test.js",
    "test:integration": "firebase emulators:exec --project test-messages-triggers --only firestore \"node scripts/run-integration-tests.js\"",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "emulator:start": "firebase emulators:start --only firestore",
    "typecheck": "node scripts/typecheck.js",
    "build": "npm run build:css && npm run typecheck && npm run test",
    "build:css": "tailwindcss -i ./src/tailwind.css -o ./styles/tailwind.css --minify",
    "dev:css": "tailwindcss -i ./src/tailwind.css -o ./styles/tailwind.css --watch"
  },
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@firebase/rules-unit-testing": "^3.0.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-prettier": "^5.5.4",
    "firebase": "^10.12.5",
    "jest": "^29.7.0",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "3.4.15"
  }
}
